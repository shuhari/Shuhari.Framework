<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:c="clr-namespace:Shuhari.Framework.Wpf.Controls">

    <Style TargetType="{x:Type c:HeaderLabel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:HeaderLabel}">
                    <Border Padding="4" Background="{TemplateBinding Background}">
                        <TextBlock x:Name="Part_Title" FontWeight="Bold" Foreground="{TemplateBinding Foreground}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type c:StatusLabel}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type c:StatusLabel}">
                    <Border x:Name="Part_Border" Padding="4">
                        <TextBlock x:Name="Part_Text" FontWeight="Bold" Foreground="{TemplateBinding Foreground}" />
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>